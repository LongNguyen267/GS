@model GameStore.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-form-container">
            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <h3>Quên mật khẩu</h3>
                <div asp-validation-summary="All" class="text-danger validation-summary"></div>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info">@TempData["Message"]</div>
                }
                <div class="input-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-login">Gửi yêu cầu <i class="fas fa-chevron-right"></i></button>
                <div class="register-link">
                    <p><a asp-action="Login">Quay lại trang đăng nhập</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}