@model GameStore.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-form-container">
            <form asp-action="ResetPassword" method="post" class="auth-form">
                <h3>Đặt lại mật khẩu</h3>
                <div asp-validation-summary="All" class="text-danger validation-summary"></div>
                <input type="hidden" asp-for="Token" />
                <div class="input-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" placeholder="Mật khẩu mới" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-login">Đặt lại <i class="fas fa-chevron-right"></i></button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}