@model GameStore.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order-details.css" asp-append-version="true" />
}
<div class="container my-5 order-details-page">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="order-info-box">
                <h4>Thông tin giao hàng</h4>
                <p>
                    <strong>Họ tên:</strong> @Model.User?.FullName
                </p>
                <p>
                    <strong>Địa chỉ:</strong> @Model.ShippingAddress
                </p>
                <p>
                    <strong>Điện thoại:</strong> @Model.PhoneNumber
                </p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="order-info-box">
                <h4>Thông tin thanh toán</h4>
                <p>
                    <strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")
                </p>
                <p>
                    <strong>Trạng thái:</strong> @Model.Status
                </p>
                <p class="total-amount-line">
                    <strong>Tổng tiền:</strong> <strong class="text-danger">@Model.TotalAmount.ToString("N0")đ</strong>
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h4 class="order-products-title">Các sản phẩm trong đơn hàng</h4>

            <div class="table-responsive">
                <table class="table order-details-table">
                    <thead>
                        <tr>
                            <th colspan="2">Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    <img src="@(item.Product.ImageUrl ?? "https://via.placeholder.com/100")" alt="@item.Product.Name">
                                </td>
                                <td>
                                    <span class="product-name">@item.Product.Name</span>
                                </td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Price.ToString("N0")đ</td>
                                <td>@((item.Quantity * item.Product.Price).ToString("N0"))đ</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a asp-action="OrderHistory" asp-controller="KhachHang" class="btn-back-history">
        <i class="fas fa-arrow-left"></i> Quay lại lịch sử
    </a>
</div>