@model GameStore.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán";
    // Tính tổng tiền
    decimal total = Model.CartItems.Sum(item => item.Product.Price * item.Quantity);
}

@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" />
    <style>
        /* CSS bổ sung cho phần thanh toán */
        .payment-method-box {
            display: flex;
            align-items: center;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .payment-method-box:hover {
                border-color: #007bff;
                background-color: #f8f9fa;
            }

            .payment-method-box input[type="radio"] {
                margin-right: 15px;
                transform: scale(1.2);
            }

        .payment-method-content {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 16px;
        }

            .payment-method-content i {
                font-size: 20px;
                width: 30px;
                text-align: center;
            }

        /* [MỚI] CSS cho khung nhập voucher */
        .voucher-box {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px dashed #ddd;
        }

        .input-group-voucher {
            display: flex;
            gap: 5px;
        }
    </style>
}

<div class="checkout-page-container">
    <div class="checkout-page-header">
        <h1>Thanh toán</h1>
        <p>Vui lòng kiểm tra thông tin và hoàn tất đơn hàng của bạn.</p>
    </div>

    @if (Model.CartItems.Count == 0)
    {
        <div class="checkout-empty-message">
            <p>Giỏ hàng của bạn đang trống. Không thể tiến hành thanh toán.</p>
            <a asp-controller="Products" asp-action="Index" class="btn-continue-shopping">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <form asp-controller="Checkout" asp-action="PlaceOrder" method="post" id="checkout-form">
            <input type="hidden" asp-for="VoucherCode" id="hiddenVoucherCode" />

            <div class="checkout-layout">

                <div class="customer-details">

                    <div class="form-section">
                        <h3><i class="fas fa-user"></i> Thông tin người nhận</h3>

                        <div class="form-group">
                            <label asp-for="FullName">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại liên hệ" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShippingAddress">Địa chỉ nhận hàng</label>
                            <input asp-for="ShippingAddress" class="form-control" placeholder="Số nhà, đường, phường/xã..." />
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3><i class="fas fa-credit-card"></i> Phương thức thanh toán</h3>
                        <div class="payment-methods">

                            <label class="payment-method-box">
                                <input type="radio" name="PaymentMethod" value="COD" checked />
                                <div class="payment-method-content">
                                    <i class="fas fa-hand-holding-usd" style="color: #28a745;"></i>
                                    <span>Thanh toán khi nhận hàng (COD)</span>
                                </div>
                            </label>

                            <label class="payment-method-box">
                                <input type="radio" name="PaymentMethod" value="VnPay" />
                                <div class="payment-method-content">
                                    <i class="fas fa-qrcode" style="color: #005ba3;"></i>
                                    <span style="font-weight: 500; color: #005ba3;">Thanh toán VNPAY (QR/Thẻ ATM)</span>
                                </div>
                            </label>

                        </div>
                    </div>
                </div>

                <div class="order-summary">
                    <div class="order-summary-box">
                        <h3>Đơn hàng của bạn</h3>
                        <ul class="order-items-list">
                            @foreach (var item in Model.CartItems)
                            {
                                <li class="order-item">
                                    <img src="@(item.Product.ImageUrl ?? "https://via.placeholder.com/100")" alt="@item.Product.Name" class="item-image" />
                                    <div class="item-info">
                                        <div class="item-name">@item.Product.Name</div>
                                        <div class="item-quantity">x @item.Quantity</div>
                                    </div>
                                    <span class="item-price">@((item.Product.Price * item.Quantity).ToString("N0"))đ</span>
                                </li>
                            }
                        </ul>

                        <div class="voucher-box">
                            <label style="font-size: 14px; font-weight: 500; margin-bottom: 5px; display: block;">Mã ưu đãi</label>
                            <div class="input-group-voucher">
                                <input type="text" id="voucherInput" class="form-control" placeholder="Nhập mã giảm giá (nếu có)" style="font-size: 14px;">
                                <button type="button" id="btnApplyVoucher" class="btn btn-outline-primary" style="white-space: nowrap;">Áp dụng</button>
                            </div>
                            <div id="voucherMessage" style="font-size: 13px; margin-top: 5px;"></div>
                        </div>

                        <div class="order-total">
                            <div class="total-row">
                                <span>Tạm tính</span>
                                <span>@total.ToString("N0")đ</span>
                            </div>

                            <div class="total-row text-success" id="discountRow" style="display:none !important">
                                <span>Giảm giá</span>
                                <span id="discountAmount">-0đ</span>
                            </div>

                            <div class="total-row">
                                <span>Phí vận chuyển</span>
                                <span>0đ</span>
                            </div>
                            <hr />
                            <div class="total-row grand-total">
                                <span>Tổng thanh toán</span>
                                <span class="final-price" id="finalTotal">@total.ToString("N0")đ</span>
                            </div>
                        </div>

                        <button type="submit" class="btn-place-order">
                            Đặt hàng ngay
                        </button>

                        <a asp-controller="Cart" asp-action="Index" class="back-to-cart-link">
                            <i class="fas fa-arrow-left"></i> Quay lại giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#btnApplyVoucher').click(function() {
                var code = $('#voucherInput').val().trim();
                // Lấy giá trị tổng tiền gốc từ biến Razor (Server render ra số luôn)
                var originalTotal = parseFloat("@total.ToString(System.Globalization.CultureInfo.InvariantCulture)");

                if(!code) {
                    toastr.warning("Vui lòng nhập mã giảm giá!");
                    return;
                }

                // Hiệu ứng loading nút bấm
                var $btn = $(this);
                $btn.prop('disabled', true).text('Đang check...');

                $.ajax({
                    url: '/Checkout/ApplyVoucher',
                    type: 'POST',
                    data: { code: code, currentTotal: originalTotal },
                    success: function(res) {
                        $btn.prop('disabled', false).text('Áp dụng');

                        if(res.success) {
                            // 1. Thông báo thành công
                            toastr.success(res.message);
                            $('#voucherMessage').text(res.message)
                                                .removeClass('text-danger')
                                                .addClass('text-success');

                            // 2. Cập nhật giao diện số tiền
                            $('#discountRow').css('display', 'flex'); // Hiện dòng giảm giá
                            $('#discountAmount').text('-' + res.discountAmount.toLocaleString('vi-VN') + 'đ');
                            $('#finalTotal').text(res.newTotal.toLocaleString('vi-VN') + 'đ');

                            // 3. Gán mã vào input ẩn để gửi đi khi submit form
                            $('#hiddenVoucherCode').val(code);

                            // 4. Khóa ô nhập để tránh sửa đổi linh tinh (Optional)
                            // $('#voucherInput').prop('readonly', true);
                            // $btn.hide();
                        } else {
                            // Thông báo lỗi
                            toastr.error(res.message);
                            $('#voucherMessage').text(res.message)
                                                .removeClass('text-success')
                                                .addClass('text-danger');

                            // Reset về mặc định
                            $('#discountRow').hide();
                            $('#finalTotal').text(originalTotal.toLocaleString('vi-VN') + 'đ');
                            $('#hiddenVoucherCode').val('');
                        }
                    },
                    error: function() {
                        $btn.prop('disabled', false).text('Áp dụng');
                        toastr.error("Có lỗi xảy ra, vui lòng thử lại!");
                    }
                });
            });
        });
    </script>
}