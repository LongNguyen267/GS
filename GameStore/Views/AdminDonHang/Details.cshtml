@model GameStore.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng " + Model.Id;
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container py-5">
    <h1>Chi tiết đơn hàng #@Model.Id</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4>Thông tin chung</h4>
            <ul class="list-group">
                <li class="list-group-item"><strong>Người dùng:</strong> @Model.User?.FullName</li>
                <li class="list-group-item"><strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</li>
                <li class="list-group-item"><strong>Trạng thái:</strong> @Model.Status</li>
                <li class="list-group-item"><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</li>
            </ul>
        </div>
    </div>

    <h4 class="mt-4">Sản phẩm trong đơn hàng</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá tại thời điểm mua</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.PriceAtPurchase.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-4">Cập nhật trạng thái</h4>
    <form asp-action="UpdateStatus" method="post">
        <input type="hidden" name="orderId" value="@Model.Id" />
        <div class="form-group row">
            <label for="newStatus" class="col-sm-2 col-form-label">Trạng thái mới:</label>
            <div class="col-sm-4">
                <select name="newStatus" id="newStatus" class="form-control">
                    <option value="Pending">Chờ xử lý</option>
                    <option value="Processing">Đang xử lý</option>
                    <option value="Shipped">Đã giao hàng</option>
                    <option value="Delivered">Đã nhận hàng</option>
                    <option value="Cancelled">Đã hủy</option>
                </select>
            </div>
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </div>
    </form>
</div>