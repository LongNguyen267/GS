@model GameStore.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Chi Tiết Đơn Hàng #@Model.Id</h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
        <i class="fas fa-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sản phẩm đã mua</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="bg-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-dark">@item.Product.Name</span>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.PriceAtPurchase.ToString("N0")đ</td>
                                    <td class="text-end font-weight-bold">
                                        @((item.PriceAtPurchase * item.Quantity).ToString("N0"))đ
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end font-weight-bold">Tổng cộng:</td>
                                <td class="text-end text-danger font-weight-bold h5">
                                    @Model.TotalAmount.ToString("N0")đ
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">Thông tin khách hàng</h6>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Họ tên:</strong> @(Model.User?.FullName ?? "Khách vãng lai")</p>
                <p class="mb-2"><strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</p>
                <p class="mb-2"><strong>Địa chỉ:</strong> @(Model.ShippingAddress ?? "Chưa cập nhật")</p>
                <p class="mb-0"><strong>SĐT:</strong> @(Model.PhoneNumber ?? "---")</p>
            </div>
        </div>

        <div class="card shadow mb-4 border-left-warning">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">Xử lý đơn hàng</h6>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="newStatus" class="form-label font-weight-bold">Trạng thái hiện tại:</label>
                        <select name="newStatus" id="newStatus" class="form-select">
                            <option value="Pending" selected="@(Model.Status == "Pending")">Chờ xử lý</option>
                            <option value="Processing" selected="@(Model.Status == "Processing")">Đang xử lý</option>
                            <option value="Shipped" selected="@(Model.Status == "Shipped")">Đang giao hàng</option>
                            <option value="Delivered" selected="@(Model.Status == "Delivered")">Đã giao thành công</option>
                            <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Hủy đơn hàng</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 shadow-sm text-white fw-bold">
                        <i class="fas fa-save me-1"></i> Cập nhật trạng thái
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // SỬ DỤNG JSON.SERIALIZE ĐỂ TRỊ DỨT ĐIỂM LỖI FONT
        // Nó sẽ tự động biến null thành null, chuỗi thành "chuỗi chuẩn"
        var successMessage = @Json.Serialize(TempData["SuccessMessage"]);

        // Kiểm tra nếu có tin nhắn thì hiện popup
        if (successMessage) {
            Swal.fire({
                title: 'Thành công!',
                text: successMessage,
                icon: 'success',
                confirmButtonColor: '#ffc107', // Màu vàng
                confirmButtonText: 'OK'
            });
        }
    </script>
}