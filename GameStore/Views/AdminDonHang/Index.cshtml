@model List<GameStore.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container py-5">
    <h1>Quản lý đơn hàng</h1>
    <hr />

    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Người dùng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@(order.User?.FullName ?? "N/A")</td>
                    <td>@(order.OrderDate?.ToString("dd/MM/yyyy"))</td>
                    <td>@order.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>