@model GameStore.ViewModels.NhapHangViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Quản lý Nhập hàng";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold" style="color: #1cc88a;">Quản Lý Kho Vận</h1>

    <button class="btn btn-success shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#formNhapKho" aria-expanded="false" aria-controls="formNhapKho">
        <i class="fas fa-dolly fa-sm text-white-50 me-1"></i> Nhập hàng mới
    </button>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="collapse mb-4" id="formNhapKho">
    <div class="card shadow border-left-success">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-success">Phiếu Nhập Kho</h6>
            <button type="button" class="btn-close" data-bs-toggle="collapse" data-bs-target="#formNhapKho" aria-label="Close"></button>
        </div>
        <div class="card-body">
            <form asp-action="NhapSanPham" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="productName" class="form-label font-weight-bold">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="productName" name="productName" required placeholder="Nhập tên sản phẩm...">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="productImage" class="form-label font-weight-bold">Ảnh minh họa</label>
                        <input type="file" class="form-control" id="productImage" name="productImage">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="brandId" class="form-label font-weight-bold">Nhà cung cấp</label>
                        <select class="form-select" id="brandId" name="brandId" required>
                            <option value="">-- Chọn thương hiệu --</option>
                            @foreach (var brand in Model.Brands)
                            {
                                <option value="@brand.Id">@brand.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="categoryId" class="form-label font-weight-bold">Danh mục</label>
                        <select class="form-select" id="categoryId" name="categoryId" required>
                            <option value="">-- Chọn loại sản phẩm --</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="quantity" class="form-label font-weight-bold">Số lượng nhập</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required min="1" value="10">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="importPrice" class="form-label font-weight-bold text-danger">Giá vốn (Nhập)</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="importPrice" name="importPrice" required min="0">
                            <span class="input-group-text">VNĐ</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label font-weight-bold text-success">Giá bán (Lẻ)</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="price" name="price" required min="0">
                            <span class="input-group-text">VNĐ</span>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="button" class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#formNhapKho">Hủy</button>
                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                        <i class="fas fa-check me-1"></i> Xác nhận nhập kho
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-success">Danh sách hàng hóa trong kho</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Products != null && Model.Products.Any())
            {
                <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                    <thead class="bg-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Thương hiệu</th>
                            <th>Loại</th>
                            <th class="text-center">Tồn kho</th>
                            <th class="text-end">Giá nhập</th>
                            <th class="text-end">Giá bán</th>
                            <th class="text-center">Ngày nhập</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td class="fw-bold text-gray-800">@product.Name</td>
                                <td><span class="badge bg-secondary">@product.Brand?.Name</span></td>
                                <td>@product.Category?.Name</td>
                                <td class="text-center">
                                    @if (product.StockQuantity > 10)
                                    {
                                        <span class="badge bg-success">@product.StockQuantity</span>
                                    }
                                    else if (product.StockQuantity > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@product.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hết hàng</span>
                                    }
                                </td>
                                <td class="text-end text-danger">@product.ImportPrice?.ToString("N0")</td>
                                <td class="text-end text-success fw-bold">@product.Price.ToString("N0")</td>
                                <td class="text-center text-muted small">
                                    <i class="far fa-clock me-1"></i>@product.CreatedAt.ToString("dd/MM/yyyy")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-boxes fa-3x text-gray-300 mb-3"></i>
                    <p class="text-gray-500">Kho hàng hiện đang trống.</p>
                </div>
            }
        </div>
    </div>
</div>