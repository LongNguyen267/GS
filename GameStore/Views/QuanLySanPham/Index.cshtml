@model GameStore.ViewModels.QuanLySanPhamViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Quản Lý Sản Phẩm</h1>

    <button class="btn btn-primary shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#formNhapHang" aria-expanded="false" aria-controls="formNhapHang">
        <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Nhập sản phẩm mới
    </button>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="collapse mb-4" id="formNhapHang">
    <div class="card shadow border-left-primary">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin nhập kho</h6>
            <button type="button" class="btn-close" data-bs-toggle="collapse" data-bs-target="#formNhapHang" aria-label="Close"></button>
        </div>
        <div class="card-body">
            <form asp-action="NhapSanPham" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="productName" class="form-label font-weight-bold">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="productName" name="productName" required placeholder="Ví dụ: PS5 Standard Edition...">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="productImage" class="form-label font-weight-bold">Ảnh sản phẩm</label>
                        <input type="file" class="form-control" id="productImage" name="productImage">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="brandId" class="form-label font-weight-bold">Nhà cung cấp</label>
                        <select class="form-select" id="brandId" name="brandId" required>
                            <option value="">-- Chọn thương hiệu --</option>
                            @foreach (var brand in Model.Brands)
                            {
                                <option value="@brand.Id">@brand.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="categoryId" class="form-label font-weight-bold">Loại sản phẩm</label>
                        <select class="form-select" id="categoryId" name="categoryId" required>
                            <option value="">-- Chọn danh mục --</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="quantity" class="form-label font-weight-bold">Số lượng nhập</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required min="1" value="10">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="importPrice" class="form-label font-weight-bold text-danger">Giá nhập (Vốn)</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="importPrice" name="importPrice" required min="0">
                            <span class="input-group-text">VNĐ</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label font-weight-bold text-success">Giá bán (Niêm yết)</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="price" name="price" required min="0">
                            <span class="input-group-text">VNĐ</span>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="button" class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#formNhapHang">Hủy bỏ</button>
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save me-1"></i> Lưu vào kho
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm hiện có</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Products != null && Model.Products.Any())
            {
                <table class="table table-bordered table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Thương hiệu</th>
                            <th>Loại</th>
                            <th class="text-center">Kho</th>
                            <th class="text-end">Giá nhập</th>
                            <th class="text-end">Giá bán</th>
                            <th class="text-center" style="width: 120px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td class="fw-bold text-gray-800">@product.Name</td>
                                <td><span class="badge bg-secondary">@product.Brand?.Name</span></td>
                                <td>@product.Category?.Name</td>
                                <td class="text-center">
                                    @if (product.StockQuantity > 10)
                                    {
                                        <span class="badge bg-success">@product.StockQuantity</span>
                                    }
                                    else if (product.StockQuantity > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@product.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hết hàng</span>
                                    }
                                </td>
                                <td class="text-end text-danger">@product.ImportPrice?.ToString("N0")</td>
                                <td class="text-end text-success fw-bold">@product.Price.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@product.Id, '@product.Name')" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    <form id="delete-form-@product.Id" asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:none;"></form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-gray-300 mb-3"></i>
                    <p class="text-gray-500">Chưa có sản phẩm nào trong kho. Hãy nhập hàng ngay!</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id, name) {
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: "Bạn có chắc muốn xóa sản phẩm \"" + name + "\" không?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74a3b',
                cancelButtonColor: '#858796',
                confirmButtonText: 'Xóa ngay',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            })
        }
    </script>
}