@model GameStore.Models.Notification

@{
    ViewData["Title"] = "Đăng thông báo mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Đăng thông báo mới</h6>
    </div>
    <div class="card-body">
        <form asp-action="CreateNotification" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tiêu đề thông báo</label>
                <input asp-for="Title" class="form-control" placeholder="Ví dụ: Bảo trì hệ thống..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Hình ảnh đính kèm (Banner)</label>

                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(this)" />

                <div class="form-text text-muted">
                    <i class="fas fa-info-circle"></i>
                    Kích thước đẹp nhất: <strong>800x400 px</strong> (hoặc tỉ lệ 2:1). <br>
                    Dung lượng tối đa: 2MB.
                </div>

                <div class="mt-3">
                    <img id="imgPreview" src="#" alt="Xem trước ảnh" style="display:none; max-width: 300px; border-radius: 8px; border: 1px dashed #ccc; padding: 5px;" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Message" class="form-label">Nội dung chi tiết</label>
                <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <hr>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-paper-plane"></i> Đăng ngay
            </button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            var preview = document.getElementById('imgPreview');
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
}