@{
    if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.Identity.IsAuthenticated && User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    }
    else
    {
        Layout = "_Layout";
    }
}